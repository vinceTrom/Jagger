<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/chat_bubble_space" >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_space_for_picandtime"
        android:layout_marginLeft="@dimen/chat_message_horizontal_margin"
        android:layout_marginRight="@dimen/chat_message_horizontal_margin"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/chat_message_horizontal_margin"
        android:layout_marginRight="@dimen/chat_message_horizontal_margin"
        android:textSize="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/dark_grey" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_white"
        android:layout_gravity="bottom"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</FrameLayout>